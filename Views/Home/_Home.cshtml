<!-- ko with: home -->
<div class="row animated fadeIn" data-bind="visible:$parent.view() == $data" style="display: none">
    
    <div class="col-md-12">
        <span data-bind="visible:loading"><i class="fa fa-spinner fa-spin"></i></span>
        
        <div class="row">
            <!-- ko with: balance -->
            <h2 data-bind="text:confirmed + ' &#579'"></h2>
            <!-- /ko -->
        </div>
        <div class="row">
            <table class="table table-striped table-hover" id="history-table">
                <thead>
                    <tr>
                        <th>Date Time</th>
                        <th>Amount</th>
                    </tr>
                </thead>
                <tbody data-bind="foreach:history">
                    <tr>
                        <td data-bind="text:moment(dateTime).format('DD/MM/YYYY HH:mm')"></td>
                        <td data-bind="text:amount + ' &#579'"></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

</div>
<!-- /ko -->
